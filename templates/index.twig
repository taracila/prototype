
{% extends 'blocks/layout.twig' %}
{% block title %}Index{% endblock %}
{% block header %}{% endblock %}

{% block content %}
<div class="index-header">
  <div class="container">
    <h1>Prototype</h1>
  {% include "blocks/logo.twig" %}
  </div>
</div>
<div class="container">
  <div class="left-side">
    <div class="page-section-list">
      <h2>Pages</h2>
      <nav class="main-menu-index">
        {% include "blocks/mainmenu.twig" %}
      </nav>
    </div>
    <div class="page-section-list">
      <h2>Modules</h2>
      <ul>
        {% for item in modules %}
          <li><a href="{{ item.link }}">{{ item.name }}</a></li>
        {% endfor %}
      </ul>
    </div>
    <div class="page-section-list">
      <h2>Javascript Libraries</h2>
      <ul>
        {% for item in jsmodules %}
          <li><a href="{{ item.link }}">{{ item.name }}</a><span>{{ item.description }}</span></li>
        {% endfor %}
      </ul>
    </div>    
  </div>

  <div class="right-side">
    <div class="page-section-list">
      <h2>Development</h2>
      <p>This prototype has been built using <a href="#">Gulp</a>, which requires Node.js and Node Package Manager (npm).</p>
    </div>
  </div>
</div>
{% endblock %}

{% block content_sidebar %}{% endblock %}
{% block footer %}{% endblock %}
